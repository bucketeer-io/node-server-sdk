{
  "compilerOptions": {
    // "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es6"
    ],
    "pretty": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "outDir": "./__lib/",
    "types": [
      "node"
    ]
  },
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./**/__tests__/*",
    "./bazel-*/**/*"
  ]
}